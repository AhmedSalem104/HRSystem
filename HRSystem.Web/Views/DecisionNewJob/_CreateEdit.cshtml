@using HRSystem.Web.Infrastructure.Extensions
@using HRSystem.Web.Infrastructure
@model  HRSystem.Web.Models.DecisionNewJobViewModel


@Html.HiddenFor(model => model.DecisionNewJobID)

@{

    if (Model.Date != null)
    {
        <input id="Datee" hidden value="@Model.Date.Value.Date">

    }
    else
    {
        <input id="Datee" hidden value="1">


    }
    if (Model.StartDate != null)
    {
        <input id="StartDatee" hidden value="@Model.StartDate.Value.Date">

    }
    else
    {

        <input id="StartDatee" hidden value="1">

    }



    if (Model.EmpId != null)
    {
        <input id="EmpIdd" hidden value="@Model.EmpId">

    }
    else
    {

        <input id="EmpIdd" hidden value="1">

    }


    var V = Session["Value"];
}


<input hidden id="IdForPrint" value=@Session["Id"]>

<div class="form-group row">

    @if (V == "Edit")
    {
        <label class="col-md-2 label-control">
            رقم العملية<span class="text-danger">*</span>
        </label>
        <div class="col-md-4">
            @Html.TextBoxFor(a => a.DecisionNewJobID, new { @id = "DecisionNewJobID", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DecisionNewJobID, "", new { @class = "text-danger" })
