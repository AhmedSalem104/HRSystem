@using HRSystem.Web.Infrastructure.Extensions
@using HRSystem.Web.Infrastructure
@model HRSystem.Web.Models.VendorViewModel

 
@Html.HiddenFor(model => model.Id)
@Html.HiddenFor(model => model.IsDeleted)
@{

    var x = Model.Id;
 }

<div class="form-group row">

    @if (x == null)
    {
        <label class="col-md-2 label-control">
            رقم المورد
        </label>
        <div class="col-md-4">
            @Html.TextBoxFor(a => a.VendorNo, new { @id = "VendorNo", @class = "form-control", @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.VendorNo, "", new { @class = "text-danger" })
            <span id="validateColCode" class="text-danger" hidden>عفوا هذا الكود موجود مسبقا</span>
        </div>

    }
    else
    {
        <label class="col-md-2 label-control">
            رقم المورد
        </label>
        <div class="col-md-4">
            @Html.TextBoxFor(a => a.VendorNo, new { @id = "VendorNo", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.VendorNo, "", new { @class = "text-danger" })
            <span id="validateColCode" class="text-danger" hidden>عفوا هذا الكود موجود مسبقا</span>
        </div>


    }

    <label class="col-md-2 label-control">
        اسم المورد
    </label>
    <div class="col-md-4">
        @Html.TextBoxFor(model => model.SupplierName, new { @class = "form-control " })
        @Html.ValidationMessageFor(model => model.SupplierName, "", new { @class = "text-danger" })



    </div>

</div>



<div class="form-group row">

    <label class="col-md-2 label-control">
        تصنيف المورد
    </label>
    <div class="input-group col-md-4">
        @Html.DropDownListFor(model => model.VendorClassificationId, (IEnumerable
       <SelectListItem>)ViewData["VendorClassification"], "---اختار---", new { @class = "form-control ", @Id = "VendorClassificationId" })
        @Html.ValidationMessageFor(model => model.VendorClassificationId, "", new { @class = "text-danger" })
    </div>
    <label class="col-md-2 label-control">
        الهاتف
    </label>
    <div class="col-md-4">
        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control " })

        @Html.ValidationMessageFor(model => model.VendorNo, "", new { @class = "text-danger" })


    </div>


</div>

